<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundproduct"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
       >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_image_black_24dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:id="@+id/editimageproduct"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:padding="12dp"
            android:background="@drawable/customedit"
            android:layout_gravity="center"
            android:text="mettre une image de produit"
            android:layout_marginBottom="12dp"
            android:id="@+id/editImage"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Entrer le nom de produit"
            android:background="@drawable/customedit"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:id="@+id/editnomproduit"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="12dp"
            android:hint="Entrer la quantité de produit"
            android:background="@drawable/customedit"
            android:layout_marginBottom="12dp"
            android:id="@+id/editingrediants"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="12dp"
            android:hint="Entrer les ingrédiants de produit"
            android:background="@drawable/customedit"
            android:layout_marginBottom="20dp"
            android:id="@+id/editprixproduit"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/customedit"
                android:layout_gravity="center"
                android:text="Modifier Produit"
                android:padding="12dp"
                android:id="@+id/Modifierproduct"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/customedit"
                android:layout_gravity="center"
                android:text="Supprimer Produit"
                android:padding="12dp"
                android:id="@+id/supprimerProduit"
                android:layout_marginLeft="12dp"
                />


        </LinearLayout>
    </LinearLayout>



</ScrollView>