<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:contentPadding="30dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/l"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_categorie"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="13dp"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
           android:layout_gravity="left"
            android:id="@+id/imageproduitt"

            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="texte"
            android:id="@+id/nomproduitt"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:layout_marginBottom="15dp"
           />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="texte"
                android:id="@+id/ingrediantspod"
                android:textSize="15sp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/money_m"
                android:layout_marginLeft="12dp"
               >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="texte"
            android:id="@+id/prixprod"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DA"
                android:id="@+id/da"
                android:textSize="30sp"
                android:textColor="#ffff"
                android:layout_marginLeft="@dimen/padd_10"/>
            </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ic_produit"
            android:src="@drawable/ic_create_black_24dp"
            android:layout_marginLeft="220dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
