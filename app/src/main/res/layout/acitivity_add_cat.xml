<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="24dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imagecategorie"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_image_black_24dp" />

    <Button
        android:id="@+id/addimagecategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="@drawable/customedit"
        android:padding="20dp"
        android:text="mettre une image de categorie"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/addnomcat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/customedit"
        android:hint="entrer le nom de categorie"
        android:padding="8dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/addbuttoncat"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/customedit"
            android:padding="12dp"
            android:text="ajouter categorie" />

        <Button
            android:id="@+id/anuuleradd"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/customedit"
            android:padding="12dp"
            android:text="Annuler " />
    </LinearLayout>

</LinearLayout>