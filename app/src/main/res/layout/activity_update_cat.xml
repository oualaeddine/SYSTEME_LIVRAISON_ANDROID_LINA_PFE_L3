<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundproduct"
    >


    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        android:background="@drawable/customedit"
        android:id="@+id/id_catUpdate"
        android:layout_marginBottom="12dp"
        />
<EditText
android:layout_marginTop="50dp"
android:layout_width="match_parent"
android:layout_height="80dp"
android:hint="entrer le nom de categorie"
android:background="@drawable/customedit"
android:id="@+id/modifierNomCat"
android:layout_marginBottom="12dp"
    />


<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"

    >

<Button
    android:layout_width="150dp"
    android:layout_height="60dp"

    android:id="@+id/ModifierCategories"
    android:text="Modifier categorie"
    android:background="@drawable/customedit"
    android:layout_marginBottom="20dp"
    />
<Button
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:id="@+id/AnnulerUpdate"
    android:layout_marginLeft="12dp"
    android:text="Annuler "
    android:background="@drawable/customedit"
    android:layout_marginBottom="20dp"
    />
</LinearLayout>

    </LinearLayout>